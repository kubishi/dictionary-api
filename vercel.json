{
  "version": 2,
  "public": true,
  "rewrites": [
    { "source": "/", "destination": "/api/docs" },
    { "source": "/docs", "destination": "/api/docs" },
    { "source": "/search", "destination": "/api/search" },
    { "source": "/search-paiute", "destination": "/api/search-paiute" },
    { "source": "/search-sentences", "destination": "/api/search-sentences" },
    { "source": "/random-word", "destination": "/api/random-word" },
    { "source": "/random-sentence", "destination": "/api/random-sentence" },
    { "source": "/word-of-the-day", "destination": "/api/word-of-the-day" },
    { "source": "/word/:id", "destination": "/api/word/:id" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
